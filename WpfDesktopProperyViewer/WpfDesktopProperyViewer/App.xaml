<Application x:Class="WpfDesktopProperyViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfDesktopProperyViewer"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="ButtonBackground" Color="Transparent"/>
        <SolidColorBrush x:Key="ButtonForeground" Color="#C0C0C0"/>
        <SolidColorBrush x:Key="ButtonBackgroundPressed" Color="#80141432"/>
        <SolidColorBrush x:Key="ButtonForegroundPressed" Color="white"/>
        <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="#80141432"/>
        <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="CadetBlue"/>
    </Application.Resources>
</Application>
